<h1>Прохождение теста <%= @test_passage.test.title %></h1>

<b>
  Вопрос: <%= @test_passage.current_question.body %>
</b>

<b>
  <%= @test_passage.question_number(@test_passage.current_question) %>
  из
  <%= @test_passage.test.questions.size %>
</b>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form|  %>
  <%= form.collection_check_boxes :answer_ids,
                                  @test_passage.current_question.answers,
                                  :id,
                                  :body,
                                  include_hidden: false do |b| %>
    <%= b.check_box id: "answer_ids#{b.object.id}" %>
    <%= b.label %>
  <% end %>

  <p><%= form.submit 'Дальше' %></p>
<% end %>
