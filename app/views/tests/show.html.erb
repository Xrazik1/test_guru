<section class="test">
  <h1>Тест: <%= @test.title %></h1>
  <span>Уровень теста: <%= @test.level %></span>
</section>
<section class="test_questions">
  <% if @test.questions.present? %>
    <h1>Вопросы данного теста: </h1>
    <% @test.questions.each do |question| %>
      #<%= question.id %> Вопрос: <%= question.body %>
      <%= link_to 'Удалить', question_path(question.id), method: :delete %>
      <%= link_to 'Изменить', edit_question_path(question.id), method: :get %>
      <br />
    <% end %>
  <% else %>
      <p>
        У теста отсутствуют вопросы
      </p>
  <% end %>
</section>

<%= link_to 'Создать вопрос', new_test_question_path(@test), method: :get %>
<%= link_to 'Назад', tests_path, method: :get %>
