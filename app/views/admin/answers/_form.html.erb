<%= form_with(model: [:admin, @question, @answer], local: true) do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <p>
    <%= form.label :body, 'Содержание' %>
    <%= form.text_area :body, id: :answer_body %>
  </p>

  <p>
    <%= form.label :correct, 'Правильный?' %>
    <%= form.check_box :correct, id: :answer_correct %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
